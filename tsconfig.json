{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react",
    "incremental": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "drip-table": ["./packages/drip-table/src"]
    }
  },
  "rules": {
    "react/prop-types": 0
  },
  "include": [
      "**/*.ts",
      "**/.*.ts",
      "**/*.tsx",
      "**/.*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
